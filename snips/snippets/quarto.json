{
  "pycode": {
      "prefix": ["pyc"],
      "body": ["```{python} ",
          "#| label: $1",
          "#| code-summary: $2",
          "",
          "$3",
          "```"]
  },
  "rcode": {
      "prefix": ["rco"],
      "body": ["```{r} ",
          "#| label: $1",
          "#| code-summary: $2",
          "",
          "$3",
          "```"]
  },
  "code": {
    "prefix": ["code"],
      "body": ["```{$1} ",
          "#| label: $2",
          "#| code-summary: $3",
          "",
          "$4",
          "```"]
  },
  "figure": {
    "prefix": ["fig"],
      "body": ["```{$1} ",
          "#| label: fig-$2",
          "#| fig-cap: $3",
          "",
          "$4",
          "```"]
  },
  "tab": {
    "prefix": ["tab"],
      "body": ["```{$1} ",
          "#| label: tbl-$2",
          "#| tbl-cap: $3",
          "#| tbl-cap-location: top",
          "",
          "$4",
          "```"]
  },
  "inline fig": {
    "prefix": ["ifig"],
    "body": ["![${1:cap1}](${2:figure}){#fig-$3}"]
  },
  "fragment": {
    "prefix": ["frag"],
    "body": ["::: {.fragment}", "$0", ":::"]
  },
  "notes": {
    "prefix": ["notes"],
    "body": ["::: {.notes}", "$0", ":::"]
  },
  "aside": {
    "prefix": ["aside"],
    "body": ["::: {.aside}", "$0", ":::"]
  },
  "alert": {
    "prefix": ["alert"],
    "body": ["[$0]{.alert}"]
  }
}
